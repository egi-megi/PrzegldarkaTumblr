<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/single_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/padding_main"
    android:paddingBottom="@dimen/padding_main"
    android:paddingStart="@dimen/padding_main"
    android:paddingEnd="@dimen/padding_main"
    android:clickable="true" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/padding_main">

        <TextView
            android:id="@+id/likes_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="@string/likes"
            android:maxLines="1"
            android:textColor="@color/colorGrey"
            android:textSize="@dimen/text_likes"
            android:layout_marginEnd="5dp"/>

        <TextView
            android:id="@+id/number_of_likes_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:textColor="@color/colorGrey"
            android:textSize="@dimen/text_likes" />

        <TextView
            android:id="@+id/date_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_date"
            android:maxLines="1"
            android:textAlignment="textEnd"
            tools:text="@string/date"
            android:textStyle="italic"
            android:textColor="@color/colorPrimaryDark"/>


    </LinearLayout>

    <!--<TextView-->
    <!--android:id="@+id/title_text_view"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:ellipsize="end"-->
    <!--android:fontFamily="sans-serif-medium"-->
    <!--android:maxLines="2"-->
    <!--android:paddingBottom="@dimen/padding_between_title_author"-->
    <!--android:textColor="@color/text_color"-->
    <!--android:textSize="@dimen/text_section_name_title_article"-->
    <!--tools:text="@string/title" />-->


    <com.example.android.przegldarkatumblr.MyWebView
        android:id="@+id/photo_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/caption_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="12"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/textColorBlack"
        android:textSize="@dimen/text_caption"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/padding_main"/>

    <View
        style="@style/Line_horizontal"
        android:layout_marginBottom="2dp"/>

    <View
        style="@style/Line_horizontal" />



</LinearLayout>

