<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
            <!--EditText for searching songs after titles-->
            <EditText
                android:id="@+id/search_editText"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:gravity="center_horizontal"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/colorAccent"
                android:inputType="text"
                android:textStyle="italic" />

            <Button
                android:id="@+id/search_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_search_red_24dp"
                android:contentDescription="@string/user_for_example"/>
</LinearLayout>


<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/select_usernames"/>


    <LinearLayout
        android:id="@+id/lastSelectedUsernames"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    </LinearLayout>



</LinearLayout>
