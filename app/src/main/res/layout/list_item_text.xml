<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/single_list_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingEnd="@dimen/padding_main"
    android:paddingStart="@dimen/padding_main"
    android:paddingTop="@dimen/padding_main">

    <View
        style="@style/Line_horizontal"
        android:layout_marginBottom="@dimen/margin_between_lines" />

    <View
        style="@style/Line_horizontal"
        android:layout_marginBottom="@dimen/padding_main" />

    <!--Layout for date and likes-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/padding_main">

        <TextView
            android:id="@+id/likes_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="@string/likes"
            android:maxLines="1"
            android:textColor="@color/colorGrey"
            android:textSize="@dimen/text_likes"
            android:layout_marginEnd="@dimen/padding_after_likes"/>

        <TextView
            android:id="@+id/number_of_likes_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:textColor="@color/colorGrey"
            android:textSize="@dimen/text_likes" />

        <TextView
            android:id="@+id/date_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_date"
            android:maxLines="1"
            android:textAlignment="textEnd"
            tools:text="@string/date"
            android:textStyle="italic"
            android:textColor="@color/colorPrimaryDark"/>

    </LinearLayout>


    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorLightGrey"
        android:fontFamily="sans-serif-medium"
        android:padding="@dimen/padding_for_description"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/text_title"
        tools:text="" />

    <TextView
        android:id="@+id/description_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_main"
        android:background="@color/colorLightGrey"
        android:ellipsize="end"
        android:fontFamily="sans-serif-medium"
        android:maxLines="30"
        android:padding="@dimen/padding_for_description"
        android:textColor="@color/textColorBlack"
        android:textSize="@dimen/text_description"
        tools:text="@string/description" />


</LinearLayout>

